@model JuegoModel

<h2>Tienda de Armas</h2>

<div class="row">
    <div class="col-md-6">
        <h3>@Model.Defensor1.Name</h3>
        <p>Oro: @Model.Defensor1.Oro</p>

        <h4>Inventario:</h4>
        <ul>
            @foreach (var arma in Model.Defensor1.Inventario)
            {
                <li>@arma.Nombre (Alcance: @arma.Alcance)</li>
            }
        </ul>

        <h4>Comprar:</h4>
        @foreach (var arma in Model.Armamentos)
        {
            <form method="post" asp-action="ComprarArma" class="mb-2">
                <input type="hidden" name="defensorId" value="1" />
                <input type="hidden" name="armaNombre" value="@arma.Nombre" />
                <button type="submit" class="btn btn-sm btn-primary"
                @(Model.Defensor1.Oro < arma.Precio ? "disabled" : "")>
                    @arma.Nombre - @arma.Precio oros
                </button>
            </form>
        }
    </div>

    
</div>

@if (Model.Defensor1.Inventario.Count > 0 )
{
    <a  onclick="alert('Batalla iniciada')" class="btn btn-success mt-3">Comenzar Batalla</a>
}